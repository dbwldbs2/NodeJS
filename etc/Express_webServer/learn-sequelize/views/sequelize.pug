doctype html
html
    head
        meda(charset = 'utf-8')
        title Sequelize Server
        style.
            table {
                border: 1px soild black;
                border-collapse: collapse;
            }

            table th, table, td {
                board: 1px solid black;
            }
    body
        div
            form#user-from
                fieldset
                    legend 사용자 등록
                    div
                        input#username(type="text" paceholder!="이름")
                    div
                        input#age(type="number" paceholder!="나이")
                    div
                        input#married(type="checkbox")
                        label(for="married") 결혼 여부
                    button(type="default") 등록
        br
        table#user-list
            thread
                tr 
                    th 아이디
                    th 이름
                    th 나이
                    th 결혼여부
            tbody
                tr
                    td= user.id
                    td= user.name
                    td= user.age
                    td= user.married ? '기혼' : '미혼' 
        br
        div
            form#comment-form
                fieldlist
                    legend 댓글 등록
                    div
                        input#userid(type="text" placeholder="사용자 아이디")
                    div
                        input#comment(type="text" placeholder="댓글")
                    button(type="submit") 등록
        br
        table#comment-list
            thead
                tr
                    th 아이디
                    th 작성자
                    th 댓글
                    th 수정
                    th 삭제
            tbody
        script(src='/sequelize.js')